<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Report #<%= @report.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reports" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link report start -->
      <div class="col">
        <a href="/reports/<%= @report.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit report
        </a>
      </div>
      <!-- Edit link report end -->

      <!-- Delete link report start -->
      <div class="col">
        <a href="/delete_report/<%= @report.id %>" class="btn btn-block btn-outline-secondary">
          Delete report
        </a>
      </div>
      <!-- Delete link report end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @report.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @report.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Photo
      </dt>
      <!-- Display photo start -->
      <dd>
        <img src="<%= @report.photo %>" class="img-fluid">
      </dd>
      <!-- Display photo end -->

      <dt>
        Relationship
      </dt>
      <!-- Display relationship_id start -->
      <dd>
        <%= @report.relationship_id %>
      </dd>
      <!-- Display relationship_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@report.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@report.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
