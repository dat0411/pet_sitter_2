<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pets
    </h1>

    <a href="/pets/new" class="btn btn-block btn-outline-secondary">
      Add a new pet
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Note
        </th>

        <th>
          Photo
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pets.each do |pet| %>
      <tr>
        <!-- Display pet.id start -->
        <td>
          <%= pet.id %>
        </td>
        <!-- Display pet.id end -->

        <!-- Display pet.name start -->
        <td>
          <%= pet.name %>
        </td>
        <!-- Display pet.name end -->

        <!-- Display pet.category start -->
        <td>
          <%= pet.category %>
        </td>
        <!-- Display pet.category end -->

        <!-- Display pet.note start -->
        <td>
          <%= pet.note %>
        </td>
        <!-- Display pet.note end -->

        <!-- Display pet.photo start -->
        <td>
          <img src='<%= pet.photo %>' class='img-fluid'>
        </td>
        <!-- Display pet.photo end -->

        <!-- Display pet.owner_id start -->
        <td>
          <%= pet.owner.email %>
        </td>
        <!-- Display pet.owner_id end -->

        <!-- Display pet.created_at start -->
        <td>
          <%= time_ago_in_words(pet.created_at) %> ago
        </td>
        <!-- Display pet.created_at end -->

        <!-- Display pet.updated_at start -->
        <td>
          <%= time_ago_in_words(pet.updated_at) %> ago
        </td>
        <!-- Display pet.updated_at end -->

        <td>
          <a href="/pets/<%= pet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
