<h1>
  Edit pet #<%= @pet.id %>
</h1>

<hr>

<!-- Form pet start -->
<form action="/update_pet/<%= @pet.id %>" method="post" enctype="multipart/form-data">
<!-- Form pet end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @pet.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for category start -->
  <div class="form-group">
    <label for="category">
      Category
    </label>

    <!-- Input for category start -->
    <input type="text" id="category" name="category" class="form-control" value="<%= @pet.category %>">
    <!-- Input for category end -->
  </div>
  <!-- Label and input for category end -->

  <!-- Label and input for note start -->
  <div class="form-group">
    <label for="note">
      Note
    </label>

    <!-- Input for note start -->
    <input type="text" id="note" name="note" class="form-control" value="<%= @pet.note %>">
    <!-- Input for note end -->
  </div>
  <!-- Label and input for note end -->

  <!-- Label and input for photo start -->
  <div class="form-group">
    <label for="photo">
      Photo
    </label>

    <!-- Input for photo start -->
    <%= cl_image_tag(@pet.photo.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="photo" name="photo" class="form-control">
    <!-- Input for photo end -->
  </div>
  <!-- Label and input for photo end -->

  <!-- Label and input for owner_id start -->
  <!-- Label and input for owner_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update pet
  </button>
</form>

<hr>

<a href="/pets">
  Go back
</a>
