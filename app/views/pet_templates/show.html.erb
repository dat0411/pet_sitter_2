<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pet #<%= @pet.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pets" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @pet.owner %>
          <a href="/pets/<%= @pet.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit pet
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @pet.owner %>
          <a href="/delete_pet/<%= @pet.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete pet
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @pet.name %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @pet.category %>
      </dd>

      <dt>
        Note
      </dt>
      <dd>
        <%= @pet.note %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <img src="<%= @pet.photo %>" class="img-fluid">
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <% if @pet.owner.present? %>
          <a href="/users/<%= @pet.owner_id %>">
            <%= @pet.owner.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@pet.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@pet.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

