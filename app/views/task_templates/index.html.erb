<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tasks
    </h1>

    <a href="/tasks/new" class="btn btn-block btn-outline-secondary">
      Add a new task
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Finished
        </th>

        <th>
          Deadline
        </th>

        <th>
          Relationship
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tasks.each do |task| %>
      <tr>
        <!-- Display task.id start -->
        <td>
          <%= task.id %>
        </td>
        <!-- Display task.id end -->

        <!-- Display task.name start -->
        <td>
          <%= task.name %>
        </td>
        <!-- Display task.name end -->

        <!-- Display task.description start -->
        <td>
          <%= task.description %>
        </td>
        <!-- Display task.description end -->

        <!-- Display task.finished start -->
        <td>
          <%= task.finished %>
        </td>
        <!-- Display task.finished end -->

        <!-- Display task.deadline start -->
        <td>
          <%= task.deadline %>
        </td>
        <!-- Display task.deadline end -->

        <!-- Display task.relationship_id start -->
        <td>
          <%= task.relationship.home_owner_id %>
        </td>
        <!-- Display task.relationship_id end -->

        <!-- Display task.created_at start -->
        <td>
          <%= time_ago_in_words(task.created_at) %> ago
        </td>
        <!-- Display task.created_at end -->

        <!-- Display task.updated_at start -->
        <td>
          <%= time_ago_in_words(task.updated_at) %> ago
        </td>
        <!-- Display task.updated_at end -->

        <td>
          <a href="/tasks/<%= task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
