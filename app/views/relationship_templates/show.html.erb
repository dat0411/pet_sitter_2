<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Relationship #<%= @relationship.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/relationships" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link relationship start -->
      <div class="col">
        <a href="/relationships/<%= @relationship.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit relationship
        </a>
      </div>
      <!-- Edit link relationship end -->

      <!-- Delete link relationship start -->
      <div class="col">
        <a href="/delete_relationship/<%= @relationship.id %>" class="btn btn-block btn-outline-secondary">
          Delete relationship
        </a>
      </div>
      <!-- Delete link relationship end -->
    </div>

    <dl>
      <dt>
        Home owner
      </dt>
      <!-- Display home_owner_id start -->
      <dd>
        <%= @relationship.home_owner_id %>
      </dd>
      <!-- Display home_owner_id end -->

      <dt>
        Sitter
      </dt>
      <!-- Display sitter_id start -->
      <dd>
        <%= @relationship.sitter_id %>
      </dd>
      <!-- Display sitter_id end -->

      <dt>
        Start date
      </dt>
      <!-- Display start_date start -->
      <dd>
        <%= @relationship.start_date %>
      </dd>
      <!-- Display start_date end -->

      <dt>
        End date
      </dt>
      <!-- Display end_date start -->
      <dd>
        <%= @relationship.end_date %>
      </dd>
      <!-- Display end_date end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@relationship.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@relationship.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "relationship_templates/relationship_tasks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "relationship_templates/relationship_reports" %>
  </div>
</div>
<!-- Show Page Customization end -->
