<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Relationship #<%= @relationship.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/relationships" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @relationship.sitter %>
          <a href="/relationships/<%= @relationship.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit relationship
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @relationship.sitter %>
          <a href="/delete_relationship/<%= @relationship.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete relationship
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Home owner
      </dt>
      <dd>
        <% if @relationship.home_owner.present? %>
          <a href="/users/<%= @relationship.home_owner_id %>">
            <%= @relationship.home_owner.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Sitter
      </dt>
      <dd>
        <% if @relationship.sitter.present? %>
          <a href="/users/<%= @relationship.sitter_id %>">
            <%= @relationship.sitter.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Start date
      </dt>
      <dd>
        <%= @relationship.start_date %>
      </dd>

      <dt>
        End date
      </dt>
      <dd>
        <%= @relationship.end_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@relationship.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@relationship.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "relationship_templates/relationship_tasks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "relationship_templates/relationship_reports" %>
  </div>
</div>
