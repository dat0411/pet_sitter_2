<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tasks

    <a data-toggle="collapse" href="#relationship_tasks_new_form">
      Add task
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @relationship.tasks.each do |task| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/tasks/<%= task.id %>">
          <%= task.name %>
        </a>

        <a href="/delete_task_from_relationship/<%= task.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="relationship_tasks_new_form">
        <%= render partial: "relationship_templates/relationship_tasks_new_form" %>
      </div>
    </div>

  </ul>
</div>
