<!-- Form task start -->
<form action="/create_task_from_relationship" method="post">
<!-- Form task end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @task.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @task.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for finished start -->
  <div class="form-group">
    <label for="finished">
      Finished
    </label>
    <!-- Input for finished start -->
    <input id="finished" class="form-check-input" name="finished" type="checkbox" <%= "checked" if @task.finished %>>
    <!-- Input for finished end -->
  </div>

  <!-- Label and input for deadline start -->
  <div class="form-group">
    <label for="deadline">
      Deadline
    </label>

    <!-- Input for deadline start -->
    <input type="text" id="deadline" name="deadline" class="form-control" value="<%= @task.deadline %>">
    <!-- Input for deadline end -->
  </div>
  <!-- Label and input for deadline end -->

  <!-- Label and input for relationship_id start -->
  <!-- Input for relationship_id start -->
  <input type="hidden" name="relationship_id" value="<%= @relationship.id %>">
  <!-- Input for relationship_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create task
  </button>
</form>
