<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All relationships
    </h1>

    <a href="/relationships/new" class="btn btn-block btn-outline-secondary">
      Add a new relationship
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "relationship_templates/relationships_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Home owner
        </th>

        <th>
          Sitter
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @relationships.each do |relationship| %>
      <tr>
        <td>
          <%= relationship.id %>
        </td>

        <td>
          <% if relationship.home_owner.present? %>
            <a href="/users/<%= relationship.home_owner.id %>">
              <%= relationship.home_owner.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if relationship.sitter.present? %>
            <a href="/users/<%= relationship.sitter.id %>">
              <%= relationship.sitter.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= relationship.start_date %>
        </td>

        <td>
          <%= relationship.end_date %>
        </td>

        <td>
          <%= time_ago_in_words(relationship.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(relationship.updated_at) %> ago
        </td>

        <td>
          <a href="/relationships/<%= relationship.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @relationships, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
