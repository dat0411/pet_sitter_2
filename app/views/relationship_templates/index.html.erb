<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All relationships
    </h1>

    <a href="/relationships/new" class="btn btn-block btn-outline-secondary">
      Add a new relationship
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Home owner
        </th>

        <th>
          Sitter
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @relationships.each do |relationship| %>
      <tr>
        <!-- Display relationship.id start -->
        <td>
          <%= relationship.id %>
        </td>
        <!-- Display relationship.id end -->

        <!-- Display relationship.home_owner_id start -->
        <td>
          <%= relationship.home_owner_id %>
        </td>
        <!-- Display relationship.home_owner_id end -->

        <!-- Display relationship.sitter_id start -->
        <td>
          <%= relationship.sitter_id %>
        </td>
        <!-- Display relationship.sitter_id end -->

        <!-- Display relationship.start_date start -->
        <td>
          <%= relationship.start_date %>
        </td>
        <!-- Display relationship.start_date end -->

        <!-- Display relationship.end_date start -->
        <td>
          <%= relationship.end_date %>
        </td>
        <!-- Display relationship.end_date end -->

        <!-- Display relationship.created_at start -->
        <td>
          <%= time_ago_in_words(relationship.created_at) %> ago
        </td>
        <!-- Display relationship.created_at end -->

        <!-- Display relationship.updated_at start -->
        <td>
          <%= time_ago_in_words(relationship.updated_at) %> ago
        </td>
        <!-- Display relationship.updated_at end -->

        <td>
          <a href="/relationships/<%= relationship.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
